@model QL_BANDIENTHOAI.Models.ViewModel.ForgotPasswordOtpViewModel
@{
    Layout = null;
    ViewBag.Title = "Quên mật khẩu";
}

@Html.Partial("_HeaderCustom")

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f7ff;
            font-family: Arial;
        }

        .auth-card {
            border: none;
            border-radius: 16px;
        }

        .auth-title {
            font-weight: 700;
            font-size: 22px;
            margin-bottom: 8px;
            color: #c8242e;
        }

        .auth-sub {
            color: #6c757d;
            margin-bottom: 25px;
        }

        .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .form-control {
            border-radius: 8px;
            padding-left: 38px;
        }

        .btn-main {
            background: #c8242e;
            border: none;
            padding: 12px;
            border-radius: 8px;
            color: #fff;
            font-weight: bold;
        }

            .btn-main:hover {
                background: #a01822;
            }

        .link {
            color: #c8242e;
            text-decoration: none;
        }

            .link:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">

        <div class="card shadow auth-card p-4" style="width:100%; max-width:420px;">

            <div class="text-center mb-3">
                <img src="~/Content/img/logo.png" style="height: 60px;" />
            </div>

            <h4 class="text-center auth-title">Quên mật khẩu</h4>
            <p class="text-center auth-sub">Nhập email để lấy mã OTP đặt lại mật khẩu</p>

            <!-- SUCCESS -->
            @if (TempData["Msg"] != null)
            {
                <div class="alert alert-success">@TempData["Msg"]</div>
            }

            <!-- INFO -->
            @if (ViewBag.Info != null)
            {
                <div class="alert alert-info">@ViewBag.Info</div>
            }

            <!-- ERROR -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- USERNAME -->
                <div class="mb-3 position-relative">
                    <label class="form-label">Tên đăng nhập</label>
                    <i class="fa-solid fa-user input-icon"></i>
                    @Html.TextBoxFor(m => m.UserName,
                        new { @class = "form-control", placeholder = "Tên đăng nhập", required = "required" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>

                <!-- EMAIL -->
                <div class="mb-3 position-relative">
                    <label class="form-label">Email</label>
                    <i class="fa-solid fa-envelope input-icon"></i>
                    @Html.TextBoxFor(m => m.Email,
                        new { @class = "form-control", placeholder = "Email đăng ký", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                @* STEP 2: OTP + NEW PASSWORD *@
                if (Model != null && Model.OtpSent)
                {
                    <div class="mb-3 position-relative">
                        <label class="form-label">Mã OTP</label>
                        <i class="fa-solid fa-key input-icon"></i>
                        @Html.TextBoxFor(m => m.Otp,
                            new { @class = "form-control", placeholder = "Nhập mã OTP", required = "required" })
                        @Html.ValidationMessageFor(m => m.Otp, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3 position-relative">
                        <label class="form-label">Mật khẩu mới</label>
                        <i class="fa-solid fa-lock input-icon"></i>
                        @Html.PasswordFor(m => m.NewPassword,
                            new { @class = "form-control", placeholder = "Nhập mật khẩu mới", required = "required" })
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3 position-relative">
                        <label class="form-label">Xác nhận mật khẩu</label>
                        <i class="fa-solid fa-lock input-icon"></i>
                        @Html.PasswordFor(m => m.ConfirmPassword,
                            new { @class = "form-control", placeholder = "Nhập lại mật khẩu", required = "required" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                }

            @Html.HiddenFor(m => m.OtpSent)

            <button type="submit" class="btn-main w-100 mt-2">
                @(Model?.OtpSent == true ? "Xác nhận đổi mật khẩu" : "Gửi mã OTP")
            </button>
            }
            <div class="text-center mt-3">
                <a href="@Url.Action("Login","Account")" class="link">Quay lại đăng nhập</a>
            </div>
            
        </div>
    </div>

    @Html.Partial("_FooterCustom")

</body>
</html>
