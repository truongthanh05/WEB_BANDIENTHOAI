@model QL_BANDIENTHOAI.Models.TaiKhoan
@{
    Layout = null;
    ViewBag.Title = "Đăng nhập";
    var returnUrl = ViewBag.ReturnUrl as string;
}

@Html.Partial("_HeaderCustom")

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f7ff;
            font-family: Arial;
        }

        .auth-card {
            border: none;
            border-radius: 16px;
        }

        .auth-title {
            font-weight: 700;
            font-size: 22px;
            margin-bottom: 8px;
            color: #c8242e;
        }

        .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .form-control {
            border-radius: 8px;
            padding-left: 38px;
        }

        .btn-login {
            background: #c8242e;
            border: none;
            padding: 12px;
            border-radius: 8px;
            color: #fff;
            font-weight: bold;
        }

        .btn-login:hover {
            background: #a01822;
        }

        .link {
            color: #c8242e;
            text-decoration: none;
        }

        .link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">

        <div class="card shadow auth-card p-4" style="width:100%; max-width:420px;">

            <div class="text-center mb-3">
                <img src="~/Content/img/logo.jpg" style="height: 60px;" />
            </div>

            <h4 class="text-center auth-title">Đăng nhập hệ thống</h4>
            <p class="text-center text-muted mb-4">Vui lòng nhập thông tin tài khoản</p>

            @if (TempData["Msg"] != null)
            {
                <div class="alert alert-success">@TempData["Msg"]</div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("returnUrl", returnUrl ?? "")

                <!-- USERNAME -->
                <div class="mb-3 position-relative">
                    <i class="fa-solid fa-user input-icon"></i>
                    @Html.TextBoxFor(m => m.TENTK, new { @class = "form-control", placeholder = "Tên đăng nhập", required = "required" })
                </div>

                <!-- PASSWORD -->
                <div class="mb-3 position-relative">
                    <i class="fa-solid fa-lock input-icon"></i>
                    @Html.PasswordFor(m => m.MATKHAU, new { @class = "form-control", placeholder = "Mật khẩu", required = "required" })
                </div>

                <button type="submit" class="btn-login w-100">Đăng nhập</button>

                <div class="text-center mt-3">
                    <a class="link" href="@Url.Action("ForgotPassword","Account")">Quên mật khẩu?</a>
                </div>

                <hr />

                <div class="text-center">
                    <a href="@Url.Action("Register","Account")"
                       class="btn btn-outline-danger w-100"
                       style="border-radius:8px;">
                        Đăng ký tài khoản mới
                    </a>
                </div>
            }

        </div>

    </div>

    @Html.Partial("_FooterCustom")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
