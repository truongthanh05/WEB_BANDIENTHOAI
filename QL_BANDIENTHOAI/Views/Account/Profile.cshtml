@model QL_BANDIENTHOAI.Models.ViewModel.ProfileViewModel
@{
    Layout = null;
    ViewBag.Title = "Thông tin tài khoản";
}
@Html.Partial("_HeaderCustom")

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f5f7ff;
            font-family: Arial, sans-serif;
        }

        .profile-container {
            max-width: 1000px;
            margin: 40px auto;
            background: #fff;
            padding: 35px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        }

        .profile-title {
            font-size: 30px;
            font-weight: 700;
            color: #c8242e;
            text-align: center;
            margin-bottom: 40px;
        }

        .avatar-section {
            text-align: center;
            margin-bottom: 35px;
        }

        .avatar-img {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #c8242e;
            box-shadow: 0 8px 25px rgba(200,36,46,0.3);
        }

        .info-card {
            background: #fff;
            border-radius: 16px;
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            border: 1px solid #eee;
        }

        .card-title {
            font-size: 22px;
            font-weight: 700;
            color: #c8242e;
            margin-bottom: 25px;
            padding-bottom: 12px;
            border-bottom: 3px solid #c8242e;
            display: inline-block;
        }

        .form-control {
            border-radius: 12px;
            padding: 14px 18px;
            font-size: 16px;
            border: 2px solid #ddd;
        }

            .form-control:focus {
                border-color: #c8242e;
                box-shadow: 0 0 0 0.2rem rgba(200,36,46,0.2);
            }

        .btn-save {
            background: #c8242e;
            border: none;
            padding: 16px 40px;
            color: #fff;
            font-weight: 700;
            font-size: 18px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(200,36,46,0.4);
            transition: all 0.3s;
        }

            .btn-save:hover {
                background: #a01822;
                transform: translateY(-3px);
            }

        .menu-sidebar {
            background: #c8242e;
            color: white;
            border-radius: 16px;
            padding: 25px;
            height: fit-content;
        }

            .menu-sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 14px 20px;
                margin: 8px 0;
                border-radius: 12px;
                font-weight: 600;
                transition: all 0.3s;
            }

                .menu-sidebar a:hover, .menu-sidebar a.active {
                    background: rgba(255,255,255,0.2);
                    transform: translateX(8px);
                }

        .toast-success {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            padding: 20px 40px;
            border-radius: 16px;
            font-size: 19px;
            font-weight: bold;
            z-index: 99999;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
    </style>
</head>
<body>

    <div class="profile-container">
        <h2 class="profile-title">
            THÔNG TIN TÀI KHOẢN
        </h2>

        <div class="row g-4">
            <!-- Sidebar Menu -->
            <div class="col-lg-3">
                <div class="menu-sidebar">
                    <h5 class="text-white mb-4">Menu tài khoản</h5>
                    <a href="/Account/Profile" class="active">
                        Thông tin cá nhân
                    </a>
                    <a href="/DonHang">
                        Đơn hàng của tôi
                    </a>
                    <a href="/Account/ChangePassword">
                        Đổi mật khẩu
                    </a>
                    <a href="/Account/Logout" style="color:#ffcccc;">
                        Đăng xuất
                    </a>
                </div>
            </div>

            <!-- Nội dung chính -->
            <div class="col-lg-9">
                <!-- Avatar + Tên -->
                <div class="avatar-section">
                    <img src="~/Content/images/avatar-default.png" alt="Avatar" class="avatar-img" />
                    <h4 class="mt-3 fw-bold" style="color:#c8242e;">Xin chào, @Model.HoTen!</h4>
                    <small class="text-muted">Thành viên từ @Model.NgayTao.ToString("dd/MM/yyyy")</small>
                </div>

                <!-- Form thông tin -->
                <div class="info-card">
                    <div class="card-title">
                        Cập nhật thông tin
                    </div>

                    <form id="updateProfileForm">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Họ và tên</label>
                                <input type="text" class="form-control" value="@Model.HoTen" name="HoTen" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                <input type="text" class="form-control" value="@Model.SDT" name="SDT" required />
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Email</label>
                                <input type="email" class="form-control" value="@Model.Email" name="Email" readonly />
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Địa chỉ giao hàng mặc định</label>
                                <textarea class="form-control" rows="3" name="DiaChi" required>@Model.DiaChi</textarea>
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn-save">
                                    LƯU THAY ĐỔI
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Thống kê nhanh -->
                <div class="row text-center g-4 mt-3">
                    <div class="col-md-4">
                        <div class="p-4 bg-light rounded shadow-sm">
                            <h5 class="text-danger fw-bold">@Model.SoDonHang</h5>
                            <small class="text-muted">Đơn hàng đã mua</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-4 bg-light rounded shadow-sm">
                            <h5 class="text-success fw-bold">@Model.SoVoucher</h5>
                            <small class="text-muted">Voucher đang có</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-4 bg-light rounded shadow-sm">
                            <h5 class="text-primary fw-bold">@Model.TongTienDaMua.ToString("N0") đ</h5>
                            <small class="text-muted">Tổng chi tiêu</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_FooterCustom")

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
    $("#updateProfileForm").submit(function (e) {
        e.preventDefault();
        var formData = $(this).serialize();

        $.post("/Account/UpdateProfile", formData, function (res) {
            if (res.success) {
                var toast = $('<div class="toast-success">Cập nhật thông tin thành công!</div>');
                $("body").append(toast);
                toast.hide().fadeIn(400);
                setTimeout(() => toast.fadeOut(600, () => toast.remove()), 2500);
            } else {
                alert("Lỗi: " + (res.message || "Không thể cập nhật"));
            }
        }).fail(() => alert("Lỗi kết nối server!"));
    });
    </script>

</body>
</html>