@model System.Data.DataRow
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Chỉnh Sửa Loại Sản Phẩm";
}

<style>
    /* Thiết lập màu nền trang */
    body {
        background: linear-gradient(135deg, #6EE7B7 0%, #3B82F6 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    h2 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-top: 20px;
    }

    /* Form wrapper */
    form {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin: 30px auto;
        max-width: 900px;
    }

    /* Label styling */
    label {
        font-size: 16px;
        font-weight: 600;
        color: #444;
        display: block;
        margin-bottom: 8px;
    }

    /* Input fields */
    .form-control {
        padding: 10px 15px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 14px;
        width: 100%;
        margin-bottom: 20px;
        box-sizing: border-box;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #3B82F6;
            box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
        }

    /* Styling for select dropdown */
    select.form-control {
        padding: 10px 15px;
        border-radius: 8px;
        font-size: 14px;
        border: 1px solid #ddd;
        width: 100%;
        margin-bottom: 20px;
    }

    /* Custom styling for buttons */
    .btn {
        background: #3B82F6;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn:hover {
            background: #2563EB;
            transform: translateY(-2px);
        }

    .btn-cancel {
        background: #f44336;
        margin-right: 10px;
    }

        .btn-cancel:hover {
            background: #e53935;
            transform: translateY(-2px);
        }

    .form-group {
        margin-bottom: 20px;
    }

    /* Responsive form */
    @@media (max-width: 768px) {
        form {
            padding: 20px;
            margin: 15px;
        }

        .form-control {
            padding: 8px;
            font-size: 14px;
        }

        h2 {
            font-size: 20px;
        }
    }
</style>

<h2>Chỉnh Sửa Loại Sản Phẩm: @Model["MALOAI"]</h2>

@using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="maLoai" value="@Model["MALOAI"]" />

    <div class="form-group">
        <label for="tenLoai">Tên Loại Sản Phẩm</label>
        <input type="text" id="tenLoai" name="tenLoai" class="form-control" value="@Model["TENLOAI"]" required />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
}
