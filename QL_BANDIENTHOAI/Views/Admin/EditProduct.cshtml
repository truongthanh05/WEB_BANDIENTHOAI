@model System.Data.DataRow

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}

<style>
    /* Thiết lập màu nền trang */
    body {
        background: linear-gradient(135deg, #6EE7B7 0%, #3B82F6 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    h2 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-top: 20px;
    }

    /* Form wrapper */
    form {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin: 30px auto;
        max-width: 900px;
    }

    /* Label styling */
    label {
        font-size: 16px;
        font-weight: 600;
        color: #444;
        display: block;
        margin-bottom: 8px;
    }

    /* Input fields */
    .form-control {
        padding: 10px 15px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 14px;
        width: 100%;
        margin-bottom: 20px;
        box-sizing: border-box;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #3B82F6;
        box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
    }

    /* Styling for select dropdown */
    select.form-control {
        padding: 10px 15px;
        border-radius: 8px;
        font-size: 14px;
        border: 1px solid #ddd;
        width: 100%;
        margin-bottom: 20px;
    }

    /* Custom styling for buttons */
    .btn {
        background: #3B82F6;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn:hover {
        background: #2563EB;
        transform: translateY(-2px);
    }

    .btn-cancel {
        background: #f44336;
        margin-right: 10px;
    }

    .btn-cancel:hover {
        background: #e53935;
        transform: translateY(-2px);
    }

    .form-group {
        margin-bottom: 20px;
    }

    /* Responsive form */
    @@media (max-width: 768px) {
        form {
            padding: 20px;
            margin: 15px;
        }

        .form-control {
            padding: 8px;
            font-size: 14px;
        }

        h2 {
            font-size: 20px;
        }
    }
</style>

<h2>Chỉnh sửa sản phẩm: @Model["MASP"]</h2>

@using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="masp" value="@Model["MASP"]" />

    <div class="form-group">
        <label for="maLoai">Mã Loại</label>
        <select id="maLoai" name="maLoai" class="form-control">
            <option value="">Chọn Mã Loại</option>
            @foreach (var item in ViewBag.MaLoaiList as List<SelectListItem>)
            {
                <option value="@item.Value" @(item.Value == Model["MALOAI"].ToString() ? "selected" : "")>@item.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="tenSp">Tên Sản Phẩm</label>
        <input type="text" id="tenSp" name="tenSp" class="form-control" value="@Model["TENSP"]" required />
    </div>

    <div class="form-group">
        <label for="giaBan">Giá Bán</label>
        <input type="number" id="giaBan" name="giaBan" class="form-control" value="@Model["GIABAN"]" required min="0" />
    </div>

    <div class="form-group">
        <label for="moTa">Mô Tả</label>
        <textarea id="moTa" name="moTa" class="form-control">@Model["MOTA"]</textarea>
    </div>

    <div class="form-group">
        <label for="ram">Ram</label>
        <input type="text" id="ram" name="ram" class="form-control" value="@Model["RAM"]" />
    </div>

    <div class="form-group">
        <label for="rom">Rom</label>
        <input type="text" id="rom" name="rom" class="form-control" value="@Model["ROM"]" />
    </div>

    <div class="form-group">
        <label for="os">Hệ Điều Hành</label>
        <select id="os" name="os" class="form-control">
            <option value="">Chọn Hệ Điều Hành</option>
            @foreach (var os in ViewBag.OsList as List<string>)
            {
                <option value="@os" @(os == Model["OS"].ToString() ? "selected" : "")>@os</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="chipset">Chipset</label>
        <input type="text" id="chipset" name="chipset" class="form-control" value="@Model["CHIPSET"]" />
    </div>

    <div class="form-group">
        <label for="gpu">GPU</label>
        <input type="text" id="gpu" name="gpu" class="form-control" value="@Model["GPU"]" />
    </div>

    <div class="form-group">
        <label for="camera">Camera</label>
        <input type="text" id="camera" name="camera" class="form-control" value="@Model["CAMERA"]" />
    </div>

    <div class="form-group">
        <label for="pin">Pin</label>
        <input type="text" id="pin" name="pin" class="form-control" value="@Model["PIN"]" />
    </div>

    <div class="form-group">
        <label for="manHinh">Màn Hình</label>
        <input type="text" id="manHinh" name="manHinh" class="form-control" value="@Model["MANHINH"]" />
    </div>

    <div class="form-group">
        <label for="kichThuoc">Kích Thước</label>
        <input type="text" id="kichThuoc" name="kichThuoc" class="form-control" value="@Model["KICHTHUOC"]" />
    </div>

    <div class="form-group">
        <label for="trongLuong">Trọng Lượng</label>
        <input type="text" id="trongLuong" name="trongLuong" class="form-control" value="@Model["TRONGLUONG"]" />
    </div>

    <div class="form-group">
        <label for="simCard">Sim Card</label>
        <select id="simCard" name="simCard" class="form-control">
            <option value="">Chọn Sim Card</option>
            @foreach (var sim in ViewBag.SimCardList as List<string>)
            {
                <option value="@sim" @(sim == Model["SIMCARD"].ToString() ? "selected" : "")>@sim</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="anhSanPham">Ảnh Sản Phẩm</label>
        <input type="file" id="anhSanPham" name="anhSanPham" class="form-control" />
        @if (!string.IsNullOrEmpty(Model["ANHSANPHAM"].ToString()))
        {
            <img src="@Url.Content("~/Content" + Model["ANHSANPHAM"].ToString())" width="100" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="@Url.Action("ManageProducts", "Admin")" class="btn btn-cancel">Hủy</a>
}
