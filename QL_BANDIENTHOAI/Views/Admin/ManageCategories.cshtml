@model System.Data.DataTable
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản Lý Loại Sản Phẩm";
}
<style>
   /* Thiết lập giao diện bảng */
table.table {
    width: 100%;
    margin-top: 20px;
    border-collapse: collapse;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Thêm bóng cho bảng */
    border-radius: 8px; /* Cạnh tròn cho bảng */
}

/* Tiêu đề bảng */
table.table th {
    background-color: #007bff;
    color: white;
    font-weight: bold;
    text-transform: uppercase;
    padding: 12px 15px;
    text-align: center;
    font-size: 16px;
    border-top-left-radius: 8px; /* Cạnh trên trái tròn */
    border-top-right-radius: 8px; /* Cạnh trên phải tròn */
}

/* Định dạng các dòng dữ liệu */
table.table td {
    padding: 12px 15px;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #ddd;
    font-size: 14px;
    color: #333;
    border-radius: 6px; /* Cạnh tròn cho ô dữ liệu */
    background-color: #f9f9f9; /* Màu nền cho ô dữ liệu */
}

/* Tạo hiệu ứng khi hover trên các dòng */
table.table tbody tr:hover {
    background-color: #f1f1f1;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1); /* Thêm bóng khi hover */
}

/* Cải thiện độ tương phản khi hover */
table.table tbody tr:nth-child(odd):hover {
    background-color: #f2f2f2;
}

table.table tbody tr:nth-child(even):hover {
    background-color: #e9e9e9;
}

/* Nút Sửa và Xóa */
.btn-sm {
    font-size: 14px;
    padding: 6px 12px;
    border-radius: 6px;
    transition: all 0.3s ease;
    color: white;
    border: none;
}

    /* Nút Sửa */
    .btn-success {
        background-color: #28a745; /* Màu xanh lá cho nút Sửa */
        color: white;
        border-radius: 6px;
        padding: 8px 16px;
        font-weight: bold;
        transition: all 0.3s ease; /* Thêm hiệu ứng khi hover */
    }

        .btn-success:hover {
            background-color: #218838;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2); /* Thêm hiệu ứng bóng khi hover */
            transform: scale(1.05); /* Hiệu ứng phóng to nhẹ */
            cursor: pointer;
        }

    /* Nút Xóa */
    .btn-danger {
        background-color: #dc3545; /* Màu đỏ cho nút Xóa */
        color: white;
        border-radius: 6px;
        padding: 8px 16px;
        font-weight: bold;
        transition: all 0.3s ease; /* Thêm hiệu ứng khi hover */
    }

        .btn-danger:hover {
            background-color: #c82333;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2); /* Thêm hiệu ứng bóng khi hover */
            transform: scale(1.05); /* Hiệu ứng phóng to nhẹ */
            cursor: pointer;
        }

    /* Cải thiện khả năng tương tác khi di chuột qua các nút */
    .btn {
        padding: 10px 15px;
        font-size: 14px;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

        /* Tạo bóng đổ cho các nút khi di chuột qua */
        .btn:hover {
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.15);
            transform: translateY(-2px); /* Di chuyển nút lên khi hover */
        }


/* Thêm nút Sửa và Xóa trong một ô dễ nhìn */
table.table tbody td .btn {
    margin: 0 5px;
}

/* Căn giữa cho các cột */
th, td {
    text-align: center;
}

/* Định dạng cho các thẻ cảnh báo */
.alert {
    border-radius: 6px;
    font-size: 14px;
    padding: 10px;
    margin-bottom: 15px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
}

/* Đảm bảo rằng bảng và các nút không bị nhỏ lại trên thiết bị di động */
@@media (max-width: 767px) {
    table.table th, table.table td {
        font-size: 12px;
        padding: 8px;
    }
}

</style>


<h2>Danh Sách Loại Sản Phẩm</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">Mã Loại</th>
                <th class="text-center">Tên Loại</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model.Rows)
            {
                <tr>
                    <td class="text-center">@row["MALOAI"]</td>
                    <td class="text-center">@row["TENLOAI"]</td>
                    <td class="text-center">
                        <!-- Nút Sửa -->
                        <a href="@Url.Action("EditCategory", "Admin", new { maLoai = row["MALOAI"] })"
                           class="btn btn-success btn-sm me-2">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>

                        <!-- Nút Xóa -->
                        <a href="@Url.Action("DeleteCategory", "Admin", new { maLoai = row["MALOAI"] })"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa loại sản phẩm này?');">
                            <i class="fa-solid fa-trash-can"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
