@model System.Data.DataTable
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý mã khuyến mãi";
}
<style>
    /* Định dạng toàn bộ bảng */
    table.table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        table.table th,
        table.table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
            border: 1px solid #ddd;
        }

        /* Tiêu đề bảng */
        table.table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        /* Định dạng cho các dòng bảng */
        table.table tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        table.table tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        table.table tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

    /* Nút sửa và xóa */
    .btn-edit,
    .btn-delete-soft {
        font-size: 14px;
        padding: 6px 12px;
        border-radius: 4px;
        transition: all 0.3s;
    }

    .btn-edit {
        background-color: #28a745;
        border: none;
    }

        .btn-edit:hover {
            background-color: #218838;
        }

    .btn-delete-soft {
        background-color: #dc3545;
        border: none;
    }

        .btn-delete-soft:hover {
            background-color: #c82333;
        }

    /* Chỉnh sửa padding cho các cột để bảng gọn gàng hơn */
    td,
    th {
        padding: 10px;
    }

    /* Các cột có chữ dài như Điều kiện có thể chỉnh font size nhỏ hơn để phù hợp */
    td {
        font-size: 14px;
    }

    /* Thêm hiệu ứng cho nút hover */
    .btn:hover {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<h2>Danh sách mã khuyến mãi</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Mã phiếu</th>
                <th>Loại phiếu</th>
                <th>Giá trị</th>
                <th>Ngày hết hạn</th>
                <th>Điều kiện</th>
                <th>Số lượng</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model.Rows)
            {
                <tr>
                    <td>@row["MAPKM"]</td>
                    <td>@row["LOAIPHIEU"]</td>
                    <td>@row["GIATRI"]</td>
                    <td>@Convert.ToDateTime(row["NGAYHETHAN"]).ToString("dd/MM/yyyy")</td>
                    <td>@row["DIEUKIEN"]</td>
                    <td>@row["SOLUONG"]</td>
                    <td>@row["TRANGTHAI"]</td>
                    <td>
                        @*<a href="@Url.Action("EditCoupon", "Admin", new { mapkm = row["MAPKM"] })" class="btn btn-primary btn-sm">Sửa</a>*@

                        <a href="@Url.Action("EditCoupon", "Admin", new { mapkm = row["MAPKM"] })"
                           class="btn btn-xs btn-edit me-1 text-white">
                            <i class="fa-solid fa-pen-to-square me-1"></i> Sửa
                        </a>

                        <!-- Nút Xóa -->
                        <a href="@Url.Action("DeleteCoupon", "Admin", new { mapkm = row["MAPKM"] })"
                           class="btn btn-xs btn-delete-soft"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa mã khuyến mãi này?');">
                            <i class="fa-solid fa-trash-can me-1"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
