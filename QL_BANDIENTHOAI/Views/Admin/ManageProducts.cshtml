@model System.Data.DataTable
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý sản phẩm";
}

<h2 class="text-center text-primary font-weight-bold my-4">Danh sách sản phẩm</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">Mã sản phẩm</th>
                <th class="text-center">Tên sản phẩm</th>
                <th class="text-center">Giá bán</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model.Rows)
            {
                <tr>
                    <td class="text-center">@row["MASP"]</td>
                    <td class="text-center">@row["TENSP"]</td>
                    <td class="text-center">@String.Format("{0:C0}", row["GIABAN"])</td>
                    <td class="text-center">
                        <!-- Nút Sửa -->
                        <a href="@Url.Action("EditProduct", "Admin", new { masp = row["MASP"] })"
                           class="btn btn-success btn-sm me-2">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>

                        <!-- Nút Xóa -->
                        <a href="@Url.Action("DeleteProduct", "Admin", new { masp = row["MASP"] })"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">
                            <i class="fa-solid fa-trash-can"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Thiết lập giao diện bảng */
    table.table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        /* Tiêu đề bảng */
        table.table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
            padding: 12px 15px;
            text-align: center;
        }

        /* Định dạng các dòng dữ liệu */
        table.table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
            border: 1px solid #ddd;
        }

        table.table tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        table.table tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        table.table tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

    /* Nút Sửa và Xóa */
    .btn-sm {
        font-size: 14px;
        padding: 6px 12px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Căn giữa cho các cột */
    th, td {
        text-align: center;
    }

    /* Hiệu ứng hover cho các nút */
    .btn:hover {
        box-shadow: 0px 4px 6px rgba(0,0,0,0.1);
    }
</style>
