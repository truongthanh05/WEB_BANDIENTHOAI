@model System.Data.DataTable

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý tài khoản người dùng";
}

<style>
    /* Khung tổng */
    .admin-users-wrapper {
        background: #fff;
        border-radius: 16px;
        padding: 24px 28px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.06);
        border: 1px solid #f1f1f1;
    }

    .admin-users-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 16px;
    }

    .admin-users-title {
        font-size: 22px;
        font-weight: 700;
        color: #e63946;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .admin-users-title i {
        font-size: 24px;
    }

    .badge-role {
        font-size: 0.78rem;
        border-radius: 999px;
        padding: 4px 10px;
        font-weight: 600;
    }

    .badge-role-user {
        background: #e3f2fd;
        color: #1565c0;
    }

    .badge-role-admin {
        background: #ffebee;
        color: #c62828;
    }

    .badge-status {
        font-size: 0.78rem;
        border-radius: 999px;
        padding: 4px 10px;
        font-weight: 600;
    }

    .badge-status-active {
        background: #e6f4ea;
        color: #1e7e34;
    }

    .badge-status-locked {
        background: #fff3cd;
        color: #856404;
    }

    /* Bảng */
    .table-users {
        margin-bottom: 0;
    }

    .table-users thead th {
        border-bottom: 2px solid #dee2e6;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.03em;
        color: #6c757d;
        background: #fafafa;
    }

    .table-users tbody tr:hover {
        background: #fff7f7;
    }

    /* Giảm chiều rộng và làm cho cột mật khẩu nhỏ lại */
    .col-password {
        max-width: 150px; /* Giảm chiều rộng tối đa */
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 0.85rem; /* Giảm cỡ chữ để ô nhìn nhỏ hơn */
        padding: 4px; /* Giảm padding */
    }

        /* Đảm bảo mật khẩu có thể hiển thị đầy đủ khi di chuột vào */
        .col-password[title] {
            cursor: pointer;
            position: relative;
        }

            .col-password[title]:hover::after {
                content: attr(title); /* Hiển thị mật khẩu đầy đủ khi hover */
                position: absolute;
                background-color: #f1f1f1;
                padding: 5px;
                border-radius: 8px;
                top: 100%;
                left: 0;
                width: max-content;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }


    .btn-xs {
        padding: 4px 10px;
        font-size: 0.8rem;
        border-radius: 999px;
        font-weight: 600;
    }

    .btn-edit {
        background: #e63946;
        border-color: #e63946;
    }

    .btn-edit:hover {
        background: #c92d39;
        border-color: #c92d39;
    }

    .btn-delete-soft {
        background: #f1f3f5;
        border-color: #dee2e6;
        color: #495057;
    }

    .btn-delete-soft:hover {
        background: #e9ecef;
        border-color: #ced4da;
        color: #c92d39;
    }

    .pill-count {
        font-size: 0.8rem;
        background: #ffe8ec;
        color: #c92d39;
        padding: 3px 9px;
        border-radius: 999px;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .admin-users-wrapper {
            padding: 16px 16px;
        }

        .admin-users-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<div class="container mt-4 mb-4">
    <div class="admin-users-wrapper">
        <div class="admin-users-header">
            <div class="admin-users-title">
                <i class="fa-solid fa-users-gear text-danger"></i>
                <span>Danh sách tài khoản người dùng</span>
            </div>

            <span class="pill-count">
                Tổng: @Model.Rows.Count tài khoản
            </span>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle table-users">
                <thead>
                    <tr>
                        <th>Mã tài khoản</th>
                        <th>Tên tài khoản</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Mã người dùng</th>
                        <th>Mật khẩu</th>
                        <th style="width:150px; text-align:center;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in Model.Rows)
                    {
                        var role = row["ROLE"]?.ToString() ?? "";
                        var status = row["TRANGTHAI"]?.ToString() ?? "";

                        <tr>
                            <td>@row["MATK"]</td>
                            <td>@row["TENTK"]</td>

                            <td>
                                @if (role.Equals("ADMIN", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge-role badge-role-admin">ADMIN</span>
                                }
                                else
                                {
                                    <span class="badge-role badge-role-user">@role</span>
                                }
                            </td>

                            <td>
                                @if (status.Equals("ACTIVE", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge-status badge-status-active">ACTIVE</span>
                                }
                                else
                                {
                                    <span class="badge-status badge-status-locked">@status</span>
                                }
                            </td>

                            <td>
                                @if (row["NGAYTAO"] != DBNull.Value)
                                {
                                    @Convert.ToDateTime(row["NGAYTAO"]).ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </td>

                            <td>@row["ID"]</td>

                            <td class="col-password" title="@row["MATKHAU"]">
                                @row["MATKHAU"]
                            </td>

                            <td class="text-center">
                                <a href="@Url.Action("EditAccount", "Admin", new { matk = row["MATK"] })"
                                   class="btn btn-xs btn-edit me-1 text-white">
                                    <i class="fa-solid fa-pen-to-square me-1"></i> Sửa
                                </a>

                                <a href="@Url.Action("DeleteAccount", "Admin", new { matk = row["MATK"] })"
                                   class="btn btn-xs btn-delete-soft"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản này?');">
                                    <i class="fa-solid fa-trash-can me-1"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @*<small class="text-muted d-block mt-2">
            <i class="fa-regular fa-circle-question me-1"></i>
            Mật khẩu được hiển thị dạng rút gọn, di chuột vào để xem đầy đủ.
        </small>*@
    </div>
</div>
